<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:vm="clr-namespace:ProduceNowApp.ViewModels"
             x:DataType="vm:ChannelPresentationViewModel"
             x:Class="ProduceNowApp.Views.ChannelPresentationView">
    <StackPanel
        HorizontalAlignment="Center"
        Orientation="Vertical">
        <Image Width="40" Height="40" Source="{Binding RecordImage}"/>
        <TextBlock Margin="0,10,0,0" TextAlignment="Center" TextTrimming="CharacterEllipsis" Foreground="{Binding StandbyColor}" Text="{Binding ShortTitle}"/>
        <TextBlock Margin="0,5,0,10" TextAlignment="Center" TextTrimming="CharacterEllipsis" Foreground="{Binding StateColor}" Text="{Binding StateString}"/>
        <Image Width="160" Height="160" Source="{ Binding MiniPicture}"/>
    </StackPanel>    
</UserControl>
