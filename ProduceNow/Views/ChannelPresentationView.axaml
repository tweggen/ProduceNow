<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:vm="clr-namespace:ProduceNow.ViewModels"
             x:DataType="vm:ChannelPresentationViewModel"
             x:Class="ProduceNow.Views.ChannelPresentationView">
    <StackPanel
            HorizontalAlignment="Center"
            Orientation="Vertical">
        <TextBlock IsVisible="{Binding IsRecording}">
            Rec
        </TextBlock>
        <TextBlock IsVisible="{Binding !IsRecording}">
            Stp
        </TextBlock>
        <TextBlock Text="{Binding ShortTitle}"/>
        <TextBlock Text="{Binding StateString}"/>
        <TextBlock Width="200" Height="200">Overlay Picture</TextBlock>
    </StackPanel>    
</UserControl>
