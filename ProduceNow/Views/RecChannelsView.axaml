<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ProduceNow.ViewModels"
             xmlns:v="clr-namespace:ProduceNow.Views"
             mc:Ignorable="d"
             x:Class="ProduceNow.Views.RecChannelsView">
    <DockPanel Background="#5555cc">
        <Button DockPanel.Dock="Top"
            Command="{Binding $parent[Window].((vm:MainWindowViewModel)DataContext).AddChannel}">
            Add a channel
        </Button>
        <v:ChannelPresentationsView/>
    </DockPanel>
</UserControl>
